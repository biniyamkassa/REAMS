{% extends "::base.html.twig" %}

{% block title %}{% trans %}New submission{% endtrans %}{% endblock %}

{% block content %}
    <div class="container-fluid main-content">
        <div class="row">
            <div class='col-md-12'>
                <h1 class="page-header">{% trans %}New submission{% endtrans %}</h1>
            </div>
        </div>

        {% include 'Proethos2CoreBundle:NewSubmission:meta.html.twig' %}

        <div class='new-submission-tab-content'>
            <form class='form' method='POST' id='form-fifth' action='{{ path("submission_new_fifth_step", {submission_id: submission.id}) }}'>

                <input type="hidden" name="token" value="{{ csrf_token('submission-fifth-step') }}"/>
                <input type='hidden' name='submission_id' value='{{ submission.id }}'>

                <div class='block'>
                    <div class='row'>
                        <div class="col-md-12">
                            <h2 class='sub-header'>{% trans %}References{% endtrans %}</h2>
                        </div>
                    </div>

                    <div id="anchor-textarea-bibliography"></div>

                    <div class='row'>
                        <div class="col-md-12">
                            <div class="form-group required">
                                <label for="textarea-bibliography">{% trans %}Bibliography{% endtrans %}:</label>
                                <a href="{{ path("crud_admin_help_show", {help_id: 8} ) }}" data-toggle="modal" data-target="#modal-help"><i class='glyphicon glyphicon-question-sign'></i></a>
                                <textarea rows="5" class="form-control summernote" id='textarea-bibliography' name='bibliography'>{{ submission.bibliography }}</textarea>
                            </div>
                        </div>
                    </div>
                </div>

                <div class='block'>
                    <div class='row'>
                        <div class="col-md-12">
                            <h2 class='sub-header'>{% trans %}Contacts{% endtrans %}:</h2>
                        </div>
                    </div>

                    <div class='row'>
                        <div class="col-md-12">
                            <div class="form-group required">
                                <label for="textarea-sscientific-contact">{% trans %} Address of Principal Investigator {% endtrans %}:</label>
                                <a href="{{ path("crud_admin_help_show", {help_id: 9} ) }}" data-toggle="modal" data-target="#modal-help"><i class='glyphicon glyphicon-question-sign'></i></a>
                                <textarea rows="5" class="form-control" id='textarea-sscientific-contact' name='sscientific-contact'>{{ submission.sscientificContact }}</textarea>
                            </div>
                        </div>
                    </div>
                </div>

                {% if not submission.isTranslation %}
                    <div class='block'>
                        <div class='row'>
                            <div class="col-md-12">
                                <h2 class='sub-header'>{% trans %}Prior Ethical Approval{% endtrans %}</h2>
                            </div>
                        </div>

                        <div class='row'>
                            <div class="col-md-12">
                                <div class="form-group required">
                                    <label for="">{% trans %}Prior Ethical Approval{% endtrans %}:</label>
                                    <a href="{{ path("crud_admin_help_show", {help_id: 10} ) }}" data-toggle="modal" data-target="#modal-help"><i class='glyphicon glyphicon-question-sign'></i></a>
                                    <div class='radio'>
                                        
<label><input type='radio' {{submission.priorEthicalApproval == true ? 'checked' : ''}} name='prior-ethical-approval' id='radio-prior-ethical-approval-yes' value='Y'>{% trans %}Yes{% endtrans %}</label>
                                        
                                    </div>
                                    <div class='radio'>
                                        <label><input type='radio' {{submission.priorEthicalApproval == false ? 'checked' : ''}} name='prior-ethical-approval' id="radio-prior-ethical-approval-no" value='N'> {% trans %}No{% endtrans %}</label>
                                    </div>

<div id='table-attachment' style="display:none;">
                                       <a href='#' class='btn btn-default' data-toggle="modal" data-target="#modal-new-file">{% trans %}Attach New Prior Ethical Approval{% endtrans %}</a>
                                     <table  class='table table-hover table-condensed' id='table-attachment'>
                                <thead>
                                    <tr>
                                        <th>{% trans %}Type{% endtrans %}</th>
                                        <th>{% trans %}File name{% endtrans %}</th>
                                        <th>{% trans %}Date & Time{% endtrans %}</th>
                                        <th>{% trans %}Actions{% endtrans %}</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for file in submission.attachments %}
                                    {% if file.uploadType.slug in ['prior-ethical-approval'] %}
                                        <tr>
                                            <td>{{ file.uploadType }}</td>
                                            <td>{% if file.uploadType.slug in ['protocol'] %}{{ file.filename }}{% else %}{{ file }}{% endif %}</td>
                                            <td>{{ file.created|date("d/m/Y H:i") }}</td>
                                            <td>
                                                <a href='{{ path("protocol_upload", {'upload_id': file.id }) }}' target="_blank" class='btn btn-default btn-xs' target="_blank"><i class='glyphicon glyphicon-eye-open'></i></a>
                                                <a href='#' class='btn btn-default btn-xs button-delete-attachment' data-id='{{ file.id }}' data-toggle="modal" data-target="#modal-delete-attachment">
                                                    <i class='glyphicon glyphicon-trash'></i>
                                                </a>
                                            </td>
                                        </tr>
                                        {% endif %}
                                    {% endfor %}
                                </tbody>
                            </table>
                            </div>

                                </div>
                            </div>
                        </div>
                    </div>
                {% endif %}

                <div class='submission-button-controls'>
                    <button type='submit' class='btn btn-primary'>{% trans %}Save and next{% endtrans %}</button>
                </div>

    </form>
        </div>
    </div>
 <!-- Modal Novo Arquivo -->
    <div class="modal fade" id="modal-new-file" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <form method="POST" id='form-new-attachment' enctype="multipart/form-data" action="{{ path("submission_new_fifth_step", {submission_id: submission.id}) }}">
                <input type="hidden" name="token" value="{{ csrf_token('submission-fifth-step') }}"/>
                <input type="hidden" name="MAX_FILE_SIZE" value="{{ 50*1024*1024 }}" />
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">{% trans %}New Attachment{% endtrans %}</h4>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            
                            <label for="select-new-attachment-type">{% trans %}Type{% endtrans %}:</label>
                            <a href="{{ path("crud_admin_help_show", {help_id: 11} ) }}" data-toggle="modal" data-target="#modal-help"><i class='glyphicon glyphicon-question-sign'></i></a>
                            <select class='form-control' data-live-search="true" name='new-attachment-type' id='select-new-attachment-type' required>
                                <option></option>
                                {% for type in upload_types %}
                                    {% if type.slug not in ['protocol', 'opinion'] %}
                                    <option value="{{ type.id }}">{{ type.name }}</option>
                                    {% endif %}
                                {% endfor %}
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="input-new-attachment-file">{% trans %}File{% endtrans %}:</label> 
                            <a href="{{ path("crud_admin_help_show", {help_id: 12} ) }}" data-toggle="modal" data-target="#modal-help"><i class='glyphicon glyphicon-question-sign'></i></a>
                            <input type='file' class='form-control' name='new-attachment-file' id='input-new-attachment-file' required>
                        </div>
                        
                            Maximum allowed file upload size : {{upload_file_size}}
                            <br>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">{% trans %}Close{% endtrans %}</button>
                        <button type="submit" class="btn btn-primary">{% trans %}Send{% endtrans %}</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <!-- Modal Confirmar ExclusÃ£o -->
    <div class="modal fade" id="modal-delete-attachment" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <form method="POST" id='form-delete-attachment' action="{{ path("submission_new_fifth_step", {submission_id: submission.id}) }}">
                
                <input type="hidden" name="token" value="{{ csrf_token('submission-fifth-step') }}"/>
                <input type="hidden" name="delete-attachment-id" id='hidden-delete-attachment' value="" />
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">{% trans %}Delete Attachment{% endtrans %}</h4>
                    </div>
                    <div class="modal-body">
                        <p>{% trans %}Do you confirm the exclusion of this attachment?{% endtrans %}</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">{% trans %}Close{% endtrans %}</button>
                        <button type="submit" class="btn btn-danger">{% trans %}Confirm{% endtrans %}</button>
                    </div>
                </div>

            </form>
        </div>
    </div>

{% endblock %}

{% block script %}
    <script>
        // WYSIWYG fields
        $(function(){
            // $('#form-fifth .summernote').wysihtml5(); 
            $('#form-fifth .summernote').summernote({
                height: 150,
                dialogsInBody: true,
                lang: '{% if 'en' == app.request.locale %}en-US{% else %}{{ app.request.locale|replace({ '_': '-' }) }}{% endif %}',
                popover: {
                    image: [],
                    link: [],
                    air: []
                }
            });

          //show the table with id table-attachment only if prior-ethical-approval is selected to be yes
            if ($('#radio-prior-ethical-approval-yes').is(':checked')) {
                $('#table-attachment').show();
            }else{
                $('#table-attachment').hide();
            }
            $('#radio-prior-ethical-approval-yes').on('change', function() {
                $('#table-attachment').show();
            });
            $('#radio-prior-ethical-approval-no').on('change', function() {
                $('#table-attachment').hide();   
            });

        });

        $(function(){
            $('#form-fifth').on('submit', function(e) {
                if ( $('#textarea-bibliography').summernote('isEmpty') ) {
                    // cancel submit
                    e.preventDefault();
                    alert('{% trans %}Notice: Please complete all required fields.{% endtrans %}');
                    highlight_input_field('#textarea-bibliography', 'sn');
                    return false;
                }

                if ( !$('#textarea-sscientific-contact').val() ) {
                    // cancel submit
                    e.preventDefault();
                    alert('{% trans %}Notice: Please complete all required fields.{% endtrans %}');
                    highlight_input_field('#textarea-sscientific-contact');
                    return false;
                }

                if ( $("input[name='prior-ethical-approval']:checked").length == 0 ) {
                    // cancel submit
                    e.preventDefault();
                    alert('{% trans %}Notice: Please complete all required fields.{% endtrans %}');
                    highlight_input_field('#radio-prior-ethical-approval-yes');
                    return false;
                }

// check if the table contians rows and if not give notice that please attach prior-ethical-approval
                if ( $('#table-attachment tr').length < 2 && $('#radio-prior-ethical-approval-yes').is(':checked') ) {
                    
                    // cancel submit
                    e.preventDefault();
                    alert('{% trans %}Notice: Please attach prior ethical approval all required fields.{% endtrans %}');
                    highlight_input_field('#table-attachment');
                    return false;
                }

            });
        });

$(function(){
            $("#table-attachment").on("click", ".button-delete-attachment", function(e){
                var id = $(this).data('id');
                $("#hidden-delete-attachment").val(id);
            });
            $('#modal-delete-attachment').on('hidden.bs.modal', function () {
                $("#hidden-delete-attachment").val("");
            });
            $("#select-new-attachment-type").selectpicker();
            //set value for new attachment type 
            $("#select-new-attachment-type").val({{ prior_ethical_approval_upload_type.id }});
            // disable new-attachment-type input
            $("#select-new-attachment-type").prop('disabled', true);
            $("#select-new-attachment-type").on('loaded.bs.select', function() {
                var options = $("#select-new-attachment-type option");
                options.sort(function(a,b) {
                    if (a.text > b.text) return 1;
                    else if (a.text < b.text) return -1;
                    else return 0;
                });
                $(this).empty().append(options).selectpicker("refresh");
            });
            $("#form-new-attachment").on('submit', function(e) {
                $("#select-new-attachment-type").prop('disabled', false);
                e.preventDefault();
                var fileInput = $('#input-new-attachment-file');
                if(fileInput.get(0).files.length && fileInput.get(0).files[0].size > {{ upload_file_size_bytes }} ){
                    toastr.error('The file exceeds the allowed file size limit ({{upload_file_size}})');
                }else{
                    this.submit();
                }
            })
        });

    </script>
{% endblock %}
